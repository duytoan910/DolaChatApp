<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"

                android:paddingBottom="15dp"
                android:background="@drawable/border_shadow"
                android:gravity="center">

                <ImageView
                    android:id="@+id/userAvt"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@color/transparent"
                    android:src="@drawable/images" />

                <TextView
                    android:id="@+id/userSettingName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Châu Nguyễn Duy Toàn"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/loUnfriendAMember"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="0dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/border_shadow"
                android:layout_height="wrap_content"
                android:onClick="userChangePassword">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:weightSum="10"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/createGroupWith"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="fill"
                        android:text="Tạo nhóm với Toàn"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="8.5">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_group_24" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loUnfriendAMember"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="0dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/border_shadow"
                android:layout_height="wrap_content"
                android:onClick="userChangePassword">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:weightSum="10"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="fill"
                        android:text="Hủy kết bạn"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="8.5">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/user_minus_block" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loLeaveGroup"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="0dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/border_shadow"
                android:layout_height="wrap_content"
                android:onClick="exitGroup">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:weightSum="10"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="fill"
                        android:text="Đưa vào tin nhắn chờ"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="8.5">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/block_message" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>