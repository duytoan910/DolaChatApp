<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:paddingTop="0dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:background="@drawable/border_radius_multiple_line"
    android:backgroundTint="#4dffffff"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="8">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserSetting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/transparent"
            android:layout_weight="8"
            android:src="@drawable/images" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:weightSum="10"
        android:paddingLeft="20dp"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:weightSum="10">

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="fill"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:layout_weight="1"
        android:maxLines="1"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="9">
        <ImageView
            android:id="@+id/isGroup"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_group_on_conv_24"
            />
    </LinearLayout>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingBottom="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:id="@+id/txtUserMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/dola_control_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtUserMessageTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="center"
                android:textColor="@color/dola_control_gray"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>