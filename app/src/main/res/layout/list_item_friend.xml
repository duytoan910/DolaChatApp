<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingTop="0dp"
        android:paddingRight="15dp"
        android:background="@drawable/border_radius_multiple_line"
        android:backgroundTint="#4dffffff"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="8">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUserSetting"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/transparent"
                android:layout_weight="8"
                android:src="@drawable/images" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="10"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="fill"
                android:paddingTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUserMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:textColor="@color/dola_control_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:textColor="@color/dola_control_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtUserMessageTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:textColor="@color/dola_control_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>