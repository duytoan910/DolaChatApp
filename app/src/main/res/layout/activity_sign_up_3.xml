<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dola_gradient"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Others.SignUp.SignUp_3_Activity">


    <ImageButton
        android:id="@+id/info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="@android:drawable/ic_dialog_info"
        android:backgroundTint="@color/dola_control_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Họ tên"
                android:textColor="@color/dola_control_white"/>

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius"
                android:backgroundTint="#4DFFFFFF"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Châu Nguyễn Duy A"
                android:textColor="@color/dola_control_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:text="Ngày sinh"
                android:textColor="@color/dola_control_white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius"
                android:backgroundTint="#4DFFFFFF"
                android:ems="10"
                android:inputType="date"
                android:paddingLeft="35dp"
                android:layout_weight="1.3"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="09/10/1998"
                android:textColor="@color/dola_control_white"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8.7"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_baseline_calendar_today_24"
                android:backgroundTint="@color/dola_control_white"
                android:onClick="calClick"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:text="Email"
                android:textColor="@color/dola_control_white" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_radius"
                    android:backgroundTint="#4DFFFFFF"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="35dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/dola_control_white"
                    android:text="123@gmail.com" />
            <Button
                android:id="@+id/nextStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/dola_green"
                android:text="Tiếp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingRight="30dp"
                android:paddingLeft="65dp"
                android:textColor="@color/dola_control_white"
                android:drawableRight="@drawable/go_right"
                android:scaleType="fitCenter"
                app:backgroundTint="@color/dola_green" />

        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>